{
  "compilerOptions": {
    /* Vite */
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    "moduleResolution": "node",

    "noEmit": true,
    /* Linting */
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "types": ["vite/client"],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,

    /* Custom */
    "noImplicitOverride": true
  },
  "include": ["src"]
}
